<!DOCTYPE html>
<html lang="en">
  <head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">

		<link rel="alternate" type="application/rss+xml" title="{{ site.title }}" href="{{ site.url }}/feed.xml" />
    <link rel="icon" href="{{ site.faviconPath }}" type="image/png" />

    <link href="{{ '/css/style.css' | url }}" rel="stylesheet" />

		{% include 'partials/global/site-meta-info.njk' %}

		{% if (site.analytics.google.enabled === true) and (site.analytics.google.id) %}
		  <script>
				(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
				(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
				m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
				})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

				ga('consent', 'default', {
					'ad_storage': 'denied',
					'analytics_storage': 'denied',
				});

				ga('create', '{{ site.analytics.google.id }}', 'auto');
				ga('send', 'pageview');
			</script>
		{% endif %}

  </head>
	<body>
		<div id="cookies-eu-banner" style="display: none;">
			<div class="wrapper">
				<p>By continuing to visit this site, you accept the use of third party cookies for statistical purposes.  <a href="/cookies" id="cookie-eu-more">View policy</a></p>
				<button id="cookies-eu-accept">Accept</button>
				<button id="cookies-eu-reject">Reject</button>
			</div>
		</div>

		{% include 'partials/global/site-header.njk' %}

		{% block content %}
		{% endblock content %}

		{% include "partials/global/site-footer.njk" %}

		{% block footer %}
		{% endblock footer %}

		<script src="{{ '/js/index.bundle.js' | url }}"></script>
  </body>
</html>
